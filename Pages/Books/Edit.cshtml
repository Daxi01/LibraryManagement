@page
@model LibraryManagement.Pages.Books.EditModel

<h1>Edit book</h1>

<form method="post">
    <input type="hidden" asp-for="Book.Id" /> <!-- Skryté pole pro Id -->

    <div class="form-group row">
        <label asp-for="Book.Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Book.Title" class="form-control" />
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Book.Author" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Book.Author" class="form-control" />
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Book.Genre" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Book.Genre" class="form-control" />
            <span asp-validation-for="Book.Genre" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10 form-check">
            <input type="checkbox" asp-for="Book.IsBorrowed" class="form-check-input" />
            <label asp-for="Book.IsBorrowed" class="form-check-label"></label>
            <span asp-validation-for="Book.IsBorrowed" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</form>
