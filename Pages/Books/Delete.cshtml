@page
@model LibraryManagement.Pages.Books.DeleteModel


<h1>Delete Book</h1>

<h3>Are you sure you want to delete this book?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
             @Html.DisplayFor(model => model.Book.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Genre)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.IsBorrowed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.IsBorrowed)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Book.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>

    </form>

</div>
