@page
@model LibraryManagement.Pages.Borrows.ReturnModel


<h1>Return book</h1>

<form method="post">
    <input type="hidden" asp-for="Borrow.Id"/>
    <div class="form-group">
        <label asp-for="Borrow.Book.Title" class="control-label"></label>
        <input asp-for="Borrow.Book.Title" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Borrow.User.Name" class="control-label"></label>
        <input asp-for="Borrow.User.Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Borrow.BorrowDate" class="control-label"></label>
        <input asp-for="Borrow.BorrowDate" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Borrow.ReturnDate" class="control-label"></label>
        <input asp-for="Borrow.ReturnDate" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Return</button>
    <a asp-page="./Index" class="btn btn-primary">Cancel</a>


</form>
